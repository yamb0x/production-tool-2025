{
  "name": "production-tool-monorepo",
  "version": "1.0.0",
  "description": "Professional booking and project management platform for 3D CGI studios and freelancers",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:watch": "turbo run test:watch",
    "test:ci": "turbo run test:ci",
    "test:smoke": "turbo run test:smoke",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install",
    "deps:check": "turbo run deps:check",
    "deps:check-vulnerabilities": "turbo run deps:check-vulnerabilities",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:push": "turbo run db:push",
    "db:studio": "turbo run db:studio",
    "db:seed": "turbo run db:seed",
    "db:seed:test": "turbo run db:seed:test",
    "db:backup": "turbo run db:backup",
    "db:validate": "turbo run db:validate",
    "db:test": "turbo run db:test",
    "redis:test": "turbo run redis:test",
    "start:api": "turbo run start --filter=api",
    "start:web": "turbo run start --filter=web",
    "build:api": "turbo run build --filter=api",
    "build:web": "turbo run build --filter=web",
    "dev:api": "turbo run dev --filter=api",
    "dev:web": "turbo run dev --filter=web"
  },
  "keywords": [
    "booking",
    "project-management", 
    "3d-cgi",
    "studio",
    "scheduling",
    "next.js",
    "typescript",
    "multi-tenant"
  ],
  "author": "Production Tool Team",
  "license": "ISC",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20.17.10",
    "typescript": "^5.7.2",
    "turbo": "^2.3.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "tsx": "^4.19.2",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.3.4",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "@testing-library/jest-dom": "^6.6.3",
    "jest-environment-jsdom": "^29.7.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check"
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}