{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/main.ts",
    "start": "node dist/main.js",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration --runInBand",
    "test:e2e": "jest --selectProjects e2e --runInBand",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false --runInBand",
    "test:smoke": "node scripts/smoke-test.js",
    "clean": "rm -rf dist .turbo coverage",
    "db:seed": "tsx src/database/seeds/dev-seed.ts",
    "db:seed:test": "NODE_ENV=test tsx src/database/seeds/dev-seed.ts",
    "db:backup": "tsx src/database/scripts/backup.ts",
    "db:validate": "tsx scripts/validate-db.ts",
    "db:test": "tsx scripts/test-db-connection.ts",
    "redis:test": "tsx scripts/test-redis-connection.ts",
    "deps:check": "depcheck",
    "deps:check-vulnerabilities": "audit-ci --config audit-ci.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.8",
    "@nestjs/core": "^10.4.8",
    "@nestjs/platform-express": "^10.4.8",
    "@nestjs/config": "^3.3.0",
    "@nestjs/swagger": "^8.0.5",
    "@nestjs/throttler": "^6.3.0",
    "@nestjs/mongoose": "^10.1.0",
    "mongoose": "^8.9.1",
    "mongodb": "^6.12.0",
    "socket.io": "^4.8.1",
    "zod": "^3.24.1",
    "ioredis": "^5.4.2",
    "helmet": "^8.0.0",
    "compression": "^1.7.5",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1",
    "@sentry/node": "^8.47.0",
    "shared-types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "@types/compression": "^1.7.5",
    "typescript": "^5.7.2",
    "eslint": "^8.57.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "depcheck": "^1.4.7",
    "audit-ci": "^7.1.0",
    "mongodb-memory-server": "^10.1.3"
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit",
        "testMatch": ["<rootDir>/src/**/*.spec.ts"],
        "testEnvironment": "node"
      },
      {
        "displayName": "integration",
        "testMatch": ["<rootDir>/test/integration/**/*.test.ts"],
        "testEnvironment": "node",
        "setupFilesAfterEnv": ["<rootDir>/test/setup-integration.ts"]
      },
      {
        "displayName": "e2e",
        "testMatch": ["<rootDir>/test/e2e/**/*.test.ts"],
        "testEnvironment": "node",
        "setupFilesAfterEnv": ["<rootDir>/test/setup-e2e.ts"]
      }
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.spec.ts",
      "!src/**/*.interface.ts",
      "!src/**/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}