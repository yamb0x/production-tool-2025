# Production Tool 2.0 - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
LOG_LEVEL=debug

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/production_tool_dev
MONGODB_DB_NAME=production_tool_dev

# For MongoDB Atlas (production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/production_tool?retryWrites=true&w=majority

# MongoDB Settings
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2

# =============================================================================
# AUTHENTICATION (CLERK)
# =============================================================================
# Get these from your Clerk Dashboard: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-publishable-key-here
CLERK_SECRET_KEY=sk_test_your-secret-key-here

# Clerk URL Configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=24h

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis for sessions, caching, and real-time features
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# For production with authentication:
# REDIS_URL=rediss://username:password@your-redis-provider.com:6380

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Service (Choose one: sendgrid, resend, ses)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
FROM_EMAIL=noreply@yourdomain.com
REPLY_TO_EMAIL=support@yourdomain.com

# File Storage - Primary: Cloudflare R2
STORAGE_PROVIDER=r2
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-key
CLOUDFLARE_R2_BUCKET_NAME=production-tool-assets
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Alternative: AWS S3
# STORAGE_PROVIDER=s3
# AWS_ACCESS_KEY_ID=AKIA...
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Error Tracking (Sentry)
SENTRY_DSN=https://your-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=production-tool-2025
SENTRY_ENVIRONMENT=development

# Analytics (PostHog)
POSTHOG_KEY=phc_your-posthog-key
POSTHOG_HOST=https://app.posthog.com

# Application Performance Monitoring
APM_SERVICE_NAME=production-tool-api
APM_ENVIRONMENT=development

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable development features
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true
ENABLE_DEBUG_LOGS=true

# Database tools
# MongoDB Compass can be used for database visualization

# Development API keys (use test keys only)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features during development
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_INTEGRATIONS=false
FEATURE_MOBILE_APP=false
FEATURE_WEBHOOKS=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Security headers and CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
TRUSTED_PROXIES=127.0.0.1,::1

# Rate limiting (requests per minute)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session configuration
SESSION_SECRET=another-super-secret-key-for-sessions-32-chars
SESSION_MAX_AGE=86400000

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit this file with real values to version control
# 2. Use different secrets for each environment (dev, staging, production)
# 3. Rotate secrets regularly (every 90 days recommended)
# 4. Use strong, random values for all secret keys
# 5. Test your configuration with: pnpm env:validate